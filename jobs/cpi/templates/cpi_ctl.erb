#!/bin/bash

LOG_DIR=/var/vcap/sys/log/cpi
RUN_DIR=/var/vcap/sys/run/cpi
PIDFILE=$RUN_DIR/cpi.pid
SUDOERS_FILE=/etc/sudoers.d/cpi

case $1 in

  start)
    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    <% if_p('cpi.host_ip') do |host_ip| %>
    ifconfig lo:1 <%= host_ip %> netmask 255.255.255.0
    <% end %>

    # Logs are generated by bin/cpi
    mkdir -p $LOG_DIR
    chown -R vcap:vcap $LOG_DIR

    cp /var/vcap/jobs/cpi/config/sudoers $SUDOERS_FILE
    chmod 440 $SUDOERS_FILE

    echo 1 > $PIDFILE
    ;;

  stop)
    rm -f $SUDOERS_FILE
    rm -f $PIDFILE

    ;;

  *)

  echo "Usage: cpi_ctl {start|stop}" ;;
esac
