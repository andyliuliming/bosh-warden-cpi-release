#!/bin/bash

LOG_DIR=/var/vcap/sys/log/cpi
RUN_DIR=/var/vcap/sys/run/cpi
PIDFILE=$RUN_DIR/cpi.pid

case $1 in

  start)
    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    # Replace _local_ip_ with real local IP
    local_ip=$(ip route get 8.8.8.8 | sed 's/.*src\s\(.*\)\s/\1/;tx;d;:x')
    sed -e s/_local_ip_/${local_ip}/g /var/vcap/jobs/cpi/config/cpi.json > /var/vcap/jobs/cpi/config/cpi-resolved.json

    # Logs are generated by bin/cpi
    mkdir -p $LOG_DIR
    chown -R vcap:vcap $LOG_DIR

    cp /var/vcap/jobs/cpi/config/sudoers /etc/sudoers.d/cpi
    chmod 440 /etc/sudoers.d/cpi

    echo 1 >> $PIDFILE

    ;;

  stop)
    rm -f /etc/sudoers.d/cpi

    rm -f $PIDFILE

    ;;

  *)

  echo "Usage: cpi_ctl {start|stop}" ;;
esac
