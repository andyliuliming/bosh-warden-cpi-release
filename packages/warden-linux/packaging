set -e

REPO_NAME=github.com/cloudfoundry-incubator/warden-linux

REPO_DIR=${BOSH_INSTALL_TARGET}/src/${REPO_NAME}

mkdir -p $(dirname $REPO_DIR)

cp -a $(basename $REPO_NAME)/ $REPO_DIR

pkgs_dir=${BOSH_PACKAGES_DIR:-/var/vcap/packages}
export GOROOT=$(readlink -nf $pkgs_dir/golang_1.3)
export GOPATH=$BOSH_INSTALL_TARGET:${REPO_DIR}/Godeps/_workspace
export PATH=$GOROOT/bin:$PATH

go install ${REPO_NAME}

cd $REPO_DIR

make skeleton
